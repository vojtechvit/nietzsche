@model NietzscheBiography.WebSite.ViewModels.MediaItems.Index
@{
    ViewBag.Title = "Work of " + Model.Participant.Name + " : Nietzsche Biography";
    ViewBag.ActiveParticipant = Model.Participant;
    ViewBag.Description = "";
}
<header class="page-header">
    <h1>Work of @Model.Participant.Name</h1>
</header>

@foreach(var group in Model.MediaItems)
{
    <h2>@group.Key</h2>
    <ol>
    @foreach (var m in group.Value)
    {
        <li>@Html.Partial("_MediaItemInfo", new { MediaItem = m, DisplayAuthors = false })</li>
    }
    </ol>
}
